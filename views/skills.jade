
extends layout

block content

    if skills.length
        p Here are the current entries:
        ul.skills
            for skill in skills
                li.skill
                    a(href='/skills/#{skill.id}') #{skill.title}
                    ul.relations
                        li.relation
                            a(href='#{skill.url}') #{skill.url}
    else
        p There are no entries.

    form(action'/skills', method='POST')
        p Create a new skill:
        input(type='text', name='title', placeholder="What's it called?", required)
        input(type='text', name='url', placeholder="url", required)
        input(type='submit', value='Create')
